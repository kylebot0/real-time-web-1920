<%- include ../layouts/_toppage.ejs %>
    <section class="container profile">
      <div class="profile-img-container"></div> 
    <% if(data.images.length !== 0){ %>
        <img class='profile-img' src="<%- data.images[0].url%>">
    <%} else {%>
        <img class='profile-img' src="./img/profile.png">
    <% }%>
        <article class="profile-container">
            <h2>
                <%-data.display_name%>
            </h2>
            <p>Country: <%-data.country%></p>
            <p>Email: <%-data.email%></p>
            <p>Followers: <%-data.followers.total%></p>
            <p>Product: <%-data.product%></p>
        <a href="/chat"><button>Start chat</button></a>

        </article>
    </section>
    <%- include ../layouts/_bottompage.ejs %>